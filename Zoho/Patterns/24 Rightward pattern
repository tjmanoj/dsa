#include <iostream>
#include<cstring>
using namespace std;
int main()
{
    int n;
    cin >> n;
    
    int range = n*2-1;
    int bottomRange = range;
    
    char pattern[range][range];
    memset(pattern,' ',sizeof pattern);
    
    for(int i=0;i<range;i++){
       bool flag = true;
       if(i%2 == 0){
            for(int j=i/2;j<bottomRange;j++){
                if(flag) pattern[j][i] = '*';
                flag = !flag;
            }
            bottomRange--;
       }
    }
    
    for(int i=0;i<range;i++){
        for(int j=0;j<range;j++){
            cout << pattern[i][j];
        }
        cout << endl;
    }

}
